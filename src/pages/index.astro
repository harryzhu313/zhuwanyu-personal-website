---
import Layout from "../layouts/Layout.astro";
import { title } from "..";
import Experience, {
  type Props as ExperienceProps,
} from "../components/Experience.astro";
import Education, {
  type Props as EducationProps,
} from "../components/Education.astro";
import DateTag from "../components/DateTag.astro";
import Preface, {
  type Props as PrefaceProps,
} from "../components/Preface.astro";
import WebsiteCard, {
  type Props as WebsiteCardProps,
} from "../components/WebsiteCard.astro";

const educationPreface: PrefaceProps = {
  title: "教育与学习经历",
  quote: "成年人的学习，是终身学习。",
  description: "",
};

const experiencePreface: PrefaceProps = {
  title: "工作经历",
  quote: "新生活是每一个人，每日有一定的做工，又有一定的时候求学。",
  description: "",
};

const websitesPreface: PrefaceProps = {
  title: "相关网站链接",
  quote: "欢迎访问我的其他网站",
  description: "",
};

const sentinel: EducationProps = {
  photo: "/src/assets/education/sentinelss.jpg",
  institutionName: "Sentinel Secondary School",
  institutionUrl: "https://westvancouverschools.ca/ecole-sentinel-secondary/",
  degrees: [
    ["高中", "https://westvancouverschools.ca/ecole-sentinel-secondary/"],
  ],
  location: "温哥华",
  duration: "2006 - 2008",
  description: "高中赴加拿大留学，来到美丽的温哥华，第一次离开父母，第一次独立生活。",
};

const yorku: EducationProps = {
  photo: "/src/assets/education/yorku.jpeg",
  institutionName: "York University",
  institutionUrl: "https://www.yorku.ca/",
  degrees: [
    ["经济学学士", "https://www.yorku.ca/program/econ/bsc/"],
  ],
  location: "多伦多",
  duration: "2009 - 2012",
  description: "本科阶段，主修经济学。",
};

const candobear: EducationProps = {
  photo: "/src/assets/education/candobear.png",
  institutionName: "小能熊",
  institutionUrl: "https://www.candobear.com/",
  degrees: [
    ["终身学习者", "https://www.candobear.com/"],
  ],
  location: "北京",
  duration: "2020 - 至今",
  description: "我很认同创始人@Howie 说的，“成年人的一切问题，都是学习问题”。学会学习，学会自我管理，才能过好这一生。",
};

const sentinelChina: ExperienceProps = {
  title: "市场运营与销售经理",
  company: "天津市森特奈电子有限公司",
  companyUrl: "https://sentinel-china.com/",
  photo: "/src/assets/experience/sentinel-china.jpg",
  description: "从一开始在公司负责产品的拍照与拍摄，到建立线上运营部门、搭建官方网站、创建外贸团队，再到负责公司整体的市场运营与销售，这一路走来，我学到了很多，也成长了很多。",
  duration: "2021 年至今",
  location: "天津市",
  isCurrent: true,
};

const secreenwriter: ExperienceProps = {
  title: "编剧",
  company: "北京爆鱼影视文化有限公司",
  companyUrl: " ",
  photo: "/src/assets/experience/film.jpg",
  description: "电影打开了我认识世界的大门，让我看到了一个更广阔的世界，更加丰富的人生。虽然我最终没有走上编剧的道路，但是这段经历让我爱上了电影，也让我对这个世界充满好奇。",
  duration: "2015 - 2019",
  location: "北京",
};

const websites: WebsiteCardProps[] = [
  {
    title: "朱婉妤的知识库",
    url: "https://notes.zhuwanyu.com/welcome",
    description: "我的个人知识库，记录学习心得和生活感悟",
    icon: "fa6-solid:book",
  },
  {
    title: "育儿知识库",
    url: "https://baby.harryrou.wiki",
    description: "记录育儿过程中的点滴，分享育儿经验",
    icon: "fa6-solid:baby",
  },
];
---

<Layout>
  <section class="hero is-fullheight-with-navbar" style="background: linear-gradient(135deg, #faf5ff 0%, #eff6ff 50%, #fdf2f8 100%); position: relative; overflow: hidden;">
    <!-- 装饰性背景元素 -->
    <div class="bg-decoration bg-decoration-main" style="position: absolute; top: -50%; left: -50%; width: 200%; height: 200%; background: radial-gradient(circle, rgba(99,102,241,0.08) 0%, transparent 70%); z-index: 1; animation: float 6s ease-in-out infinite;"></div>
    <div class="bg-decoration bg-decoration-1" style="position: absolute; top: 20%; right: 10%; width: 300px; height: 300px; background: radial-gradient(circle, rgba(76,29,149,0.05) 0%, transparent 70%); border-radius: 50%; z-index: 1;"></div>
    <div class="bg-decoration bg-decoration-2" style="position: absolute; bottom: 10%; left: 5%; width: 200px; height: 200px; background: radial-gradient(circle, rgba(244,114,182,0.05) 0%, transparent 70%); border-radius: 50%; z-index: 1;"></div>
    
    <div class="hero-body" style="position: relative; z-index: 2; display: flex; align-items: center; justify-content: center; min-height: calc(100vh - 4rem);">
      <div class="container">
        <div class="columns is-vcentered is-variable is-8">
          <div class="column is-half-desktop is-full-mobile">
            <h3 style="color: #4c1d95; font-weight: bold; margin-bottom: 1rem; text-shadow: 0 2px 4px rgba(76,29,149,0.1); font-size: 2rem; margin: 0 0 1rem 0;">
              Harry
            </h3>
            <h2 class="subtitle is-4" style="color: #6366f1; margin-bottom: 2rem; text-shadow: 0 1px 2px rgba(99,102,241,0.1);">
              电影摄影爱好者 | 终身学习者 ｜学习型家庭
            </h2>
            <!-- 手机端头像插入位置 -->
            <div class="mobile-avatar" style="display: none;">
              <div class="image-container" style="position: relative; display: inline-block; text-align: center; margin: 1rem 0;">
                <img 
                  src="/harry.jpg" 
                  alt="个人头像"
                  class="profile-image"
                  style="width: 200px; height: 200px; border-radius: 50%; object-fit: cover; border: 8px solid #f8f9fa; box-shadow: 0 20px 40px rgba(0,0,0,0.1);"
                />
              </div>
            </div>
            <div class="content">
              <p class="is-size-5" style="line-height: 1.2; margin-bottom: 2rem; color: #64748b; text-shadow: 0 1px 2px rgba(100,116,139,0.1);">
                大家好，我是朱婉妤，网名Harry，欢迎来到我的个人网站。
              </p>
              <p class="is-size-5" style="line-height: 1.5; margin-bottom: 2rem; color: #64748b; text-shadow: 0 1px 2px rgba(100,116,139,0.1); text-align: justify;">
                我的本职工作是工业自动化领域的一名市场运营人员。我热爱我的工作，因为我认为工作的意义不仅在于满足物质需求，更在于实现自我价值。在工作之余，我沉迷于科学学习、自我管理、AI 与深度学习。此外，我也热爱摄影和电影欣赏，喜欢用镜头捕捉生活中那些转瞬即逝的美好，通过图像处理技术不断打磨自己的作品。2024年，我与队友共同组建了学习型家庭。目前，我正与这个时刻给我带来惊喜的人类幼崽共同成长，并用文字与影像记录下她成长的点滴。

                我希望通过这个网站记录一些个人的文字、照片和视频，在互联网的世界留下属于自己的印记。我相信，人生的意义在于获得幸福，希望在这里能与你一起探索更多未知的美好。谢谢你的访问！
              </p>
             
              <div class="buttons">
                <button class="button" onclick="document.getElementById('education-section').scrollIntoView({behavior: 'smooth'})" style="background: #6366f1; color: #ffffff; border: none; border-radius: 25px; padding: 0.5625rem 1.5rem; font-weight: 600; box-shadow: 0 4px 15px rgba(99,102,241,0.3); transition: all 0.3s ease; display: flex; align-items: center; justify-content: center; gap: 0.5rem; width: auto;">
                  <span style="display: flex; align-items: center;">我的经历</span>
                </button>
                
                <button class="button" onclick="document.getElementById('contact-section').scrollIntoView({behavior: 'smooth'})" style="background: transparent; color: #4c1d95; border: 2px solid #4c1d95; border-radius: 25px; padding: 0.5625rem 1.5rem; font-weight: 600; transition: all 0.3s ease; display: flex; align-items: center; justify-content: center; gap: 0.5rem; width: auto;">
                  <span style="display: flex; align-items: center;">联系我</span>
                </button>
              </div>
            </div>
          </div>
          <div class="column is-half-desktop is-full-mobile has-text-centered-mobile has-text-right-desktop">
            <div class="image-container" style="position: relative; display: inline-block;">
              <img 
                src="/harry.jpg" 
                alt="个人头像"
                class="profile-image"
                style="width: 500px; height: 500px; border-radius: 50%; object-fit: cover; border: 8px solid #f8f9fa; box-shadow: 0 20px 40px rgba(0,0,0,0.1);"
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <style>
    @keyframes float {
      0%, 100% {
        transform: translateY(0px) rotate(0deg);
      }
      50% {
        transform: translateY(-20px) rotate(5deg);
      }
    }
    
    .button:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(0,0,0,0.2) !important;
    }

    /* 响应式样式 */
    @media (max-width: 768px) {
      .hero-body {
        padding: 1.5rem !important;
        min-height: auto !important;
      }
      
      .profile-image {
        width: 250px !important;
        height: 250px !important;
        margin: 1rem auto !important;
      }
      
      .columns.is-vcentered {
        flex-direction: column-reverse;
      }
      
      .column.is-half-desktop.is-full-mobile {
        text-align: center !important;
        padding: 1rem !important;
      }
      
      .buttons {
        justify-content: center !important;
        flex-wrap: wrap;
        gap: 0.5rem;
      }
      
      .button {
        margin: 0.25rem !important;
        font-size: 0.9rem !important;
        padding: 0.5rem 1.25rem !important;
      }

      h3 {
        font-size: 1.5rem !important;
        text-align: center !important;
      }
      
      .subtitle.is-4 {
        font-size: 1rem !important;
        text-align: center !important;
      }
      
      .is-size-5 {
        font-size: 1rem !important;
      }
    }

    @media (min-width: 769px) and (max-width: 1024px) {
      .profile-image {
        width: 350px !important;
        height: 350px !important;
      }
      
      .hero-body {
        padding: 2rem !important;
      }
      
      h3 {
        font-size: 1.75rem !important;
      }
      
      .subtitle.is-4 {
        font-size: 1.1rem !important;
      }
    }

    @media (max-width: 480px) {
      /* 显示手机端头像，隐藏桌面端头像 */
      .mobile-avatar {
        display: block !important;
      }
      
      .column.is-half-desktop.is-full-mobile:last-child {
        display: none !important;
      }
      
      .button {
        font-size: 0.85rem !important;
        padding: 0.4rem 1rem !important;
      }
      
      h3 {
        font-size: 1.25rem !important;
        margin-top: 5px !important;
      }
      
      .subtitle.is-4 {
        font-size: 0.9rem !important;
        line-height: 1.3 !important;
        margin-bottom: 0.5rem !important;
      }
      
      .hero-body {
        padding: 1rem !important;
      }
      
      .is-size-5 {
        margin-left: 5px !important;
        margin-right: 5px !important;
      }
      
      .bg-decoration-1, .bg-decoration-2 {
        display: none;
      }
    }

    /* 背景装饰元素响应式 */
    @media (max-width: 768px) {
      .bg-decoration-1 {
        width: 150px !important;
        height: 150px !important;
        top: 10% !important;
        right: 5% !important;
      }
      
      .bg-decoration-2 {
        width: 100px !important;
        height: 100px !important;
        bottom: 5% !important;
        left: 3% !important;
      }
    }
  </style>
  <section class="section" id="education-section">
    <Preface {...educationPreface} />
    <Education {...sentinel} />
    <Education {...yorku} />
    <Education {...candobear} />
  </section>
  <section class="section">
    <Preface {...experiencePreface} />
    <div class="timeline container is-max-desktop">
      <DateTag date="2015" />
      <Experience {...secreenwriter} />
      <DateTag date="2021" />
      <Experience {...sentinelChina} />
    </div>
  </section>
  <section class="section">
    <Preface {...websitesPreface} />
    <div class="container is-max-desktop">
      <div class="columns is-multiline">
        {websites.map((website) => <WebsiteCard {...website} />)}
      </div>
    </div>
  </section>
</Layout>
